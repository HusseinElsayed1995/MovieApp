<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hussein_pc.d_movie_progect">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.hussein_pc.d_movie_progect.Activites.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hussein_pc.d_movie_progect.Activites.Detail_Activity"
            android:label="@string/title_activity_detail_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.hussein_pc.d_movie_progect.Activites.Trailer_Activity"
            android:label="@string/title_activity_trailer_"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity
            android:name="com.example.hussein_pc.d_movie_progect.Activites.Review_Activit"
            android:label="@string/title_activity_review_"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboardHidden|screenSize"></activity>
    </application>

</manifest>
